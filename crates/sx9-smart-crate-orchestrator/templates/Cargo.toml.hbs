[package]
name = "{{sanitize spec.name}}"
version = "0.1.0"
edition = "{{build_config.edition}}"
authors = ["CTAS-7 Engineering Team"]
description = "{{spec.description}}"
license = "MIT"
readme = "README.md"
keywords = ["ctas", "autonomous", "{{spec.mission}}"]
categories = ["development-tools"]

[dependencies]
# CTAS-7 Foundation Crates - Security Audited
{{#each foundations}}
{{name}} = { version = "{{version}}", features = [{{#each features}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}] }
{{/each}}

# Core async runtime
tokio = { version = "1.37.0", features = ["full"] }

# Error handling and logging
anyhow = "1.0.81"
thiserror = "1.0.58"
tracing = "0.1.40"
tracing-subscriber = { version = "0.3.18", features = ["env-filter"] }

# Serialization
serde = { version = "1.0.197", features = ["derive"] }
serde_json = "1.0.115"

{{#if (eq spec.security_level "Production")}}
# Production security dependencies
blake3 = "1.5.1"
ed25519-dalek = "2.1.1"
{{/if}}

{{#if (eq spec.security_level "Classified")}}
# Classified security dependencies
blake3 = "1.5.1"
ed25519-dalek = "2.1.1"
ring = "0.17.8"
{{/if}}

[build-dependencies]
# Build-time validation
cargo_metadata = "0.18.1"

[features]
default = [{{#each build_config.features}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}]
{{#each build_config.features}}
{{this}} = []
{{/each}}

[profile.release]
# Tesla/SpaceX optimization standards
lto = true
codegen-units = 1
panic = "abort"
strip = "symbols"
overflow-checks = true

[profile.dev]
# Development profile with debugging
debug = true
incremental = true
overflow-checks = true