{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sx9.dev/schemas/lightning-qa.json",
  "title": "Lightning QA Report",
  "description": "RFC-9121 quality analysis output",
  "type": "object",
  "required": ["metadata", "scores", "grade", "passed", "structure", "complexity", "patterns", "security"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["crate_name", "analyzed_at", "engine_version"],
      "properties": {
        "crate_name": { "type": "string" },
        "analyzed_at": { "type": "string", "format": "date-time" },
        "engine_version": { "type": "string" },
        "birth_certificate_hash": { "type": "string" }
      }
    },
    "scores": {
      "type": "object",
      "required": ["structure", "complexity", "patterns", "security", "final"],
      "properties": {
        "structure": { "type": "number", "minimum": 0, "maximum": 100 },
        "complexity": { "type": "number", "minimum": 0, "maximum": 100 },
        "patterns": { "type": "number", "minimum": 0, "maximum": 100 },
        "security": { "type": "number", "minimum": 0, "maximum": 100 },
        "final": { "type": "number", "minimum": 0, "maximum": 100 }
      }
    },
    "grade": {
      "type": "string",
      "enum": ["A", "B", "C", "D", "F"]
    },
    "passed": { "type": "boolean" },
    "structure": {
      "type": "object",
      "properties": {
        "total_files": { "type": "integer" },
        "total_lines": { "type": "integer" },
        "avg_file_lines": { "type": "number" },
        "max_file_lines": { "type": "integer" },
        "files_over_limit": { "type": "array", "items": { "$ref": "#/$defs/fileViolation" } },
        "functions_over_limit": { "type": "array", "items": { "$ref": "#/$defs/functionViolation" } }
      }
    },
    "complexity": {
      "type": "object",
      "properties": {
        "avg_cyclomatic": { "type": "number" },
        "max_cyclomatic": { "type": "integer" },
        "avg_cognitive": { "type": "number" },
        "max_cognitive": { "type": "integer" },
        "avg_nesting_depth": { "type": "number" },
        "max_nesting_depth": { "type": "integer" },
        "violations": { "type": "array", "items": { "$ref": "#/$defs/complexityViolation" } }
      }
    },
    "patterns": {
      "type": "object",
      "properties": {
        "anti_patterns_found": { "type": "integer" },
        "critical": { "type": "integer" },
        "high": { "type": "integer" },
        "medium": { "type": "integer" },
        "low": { "type": "integer" },
        "details": { "type": "array", "items": { "$ref": "#/$defs/antiPattern" } }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "unsafe_blocks": { "type": "integer" },
        "unjustified_unsafe": { "type": "integer" },
        "input_validation_coverage": { "type": "number", "minimum": 0, "maximum": 1 },
        "error_handling_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "vulnerabilities": { "type": "array", "items": { "$ref": "#/$defs/vulnerability" } }
      }
    },
    "refactor_directives": {
      "type": "array",
      "items": { "$ref": "#/$defs/refactorDirective" }
    },
    "recommendation": { "type": "string" }
  },
  "$defs": {
    "fileViolation": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "lines": { "type": "integer" },
        "limit": { "type": "integer" },
        "excess": { "type": "integer" }
      }
    },
    "functionViolation": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "function": { "type": "string" },
        "lines": { "type": "integer" },
        "limit": { "type": "integer" }
      }
    },
    "complexityViolation": {
      "type": "object",
      "properties": {
        "file": { "type": "string" },
        "function": { "type": "string" },
        "metric": { "type": "string" },
        "value": { "type": "integer" },
        "threshold": { "type": "integer" }
      }
    },
    "antiPattern": {
      "type": "object",
      "required": ["type", "severity", "location"],
      "properties": {
        "type": { "type": "string" },
        "severity": { "type": "string", "enum": ["critical", "high", "medium", "low", "info"] },
        "location": { "type": "string" },
        "details": { "type": "object" },
        "remediation": { "type": "string" }
      }
    },
    "vulnerability": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "severity": { "type": "string" },
        "package": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "refactorDirective": {
      "type": "object",
      "required": ["type", "priority", "action"],
      "properties": {
        "type": { "type": "string" },
        "priority": { "type": "string", "enum": ["critical", "high", "medium", "low"] },
        "file": { "type": "string" },
        "function": { "type": "string" },
        "line": { "type": "integer" },
        "action": { "type": "string" },
        "expected_improvement": { "type": "string" }
      }
    }
  }
}
