{
  "name": "synaptix9-workflow-system",
  "version": "1.0.0",
  "description": "SYNAPTIX9 Universal Workflow Designer - Neural Mux Cannon Plug System",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "start:forge": "pnpm --filter forge-backend start",
    "start:web": "pnpm --filter @synaptix9/web dev",
    "start:desktop": "pnpm --filter @synaptix9/desktop dev",
    "forge:status": "curl -f http://localhost:18350/ || echo 'Forge backend not running'"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "electron": "^27.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}